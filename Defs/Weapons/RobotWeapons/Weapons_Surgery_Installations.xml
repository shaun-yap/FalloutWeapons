    </RecipeDef>

	<!-- Flamethrower -->
	<RecipeDef ParentName="InstallableRobotWeaponBase">
		<defName>InstallMountedFlamethrowerRight</defName>
		<label>install right weapon mounted flamethrower</label>
		<description>Install a mounted flamethrower on right weapon mount.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MountedFlamethrower</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>MountedFlamethrower</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>RightWeaponMount</li>
		</appliedOnFixedBodyParts>
		<addsHediff>FCPRobotMountedFlamethrower</addsHediff>
    </RecipeDef>

