	<RecipeDef Name="InstallableRobotWeaponBase" ParentName="SurgeryRobot" Abstract="True">
		<jobString>Installing weapon.</jobString>
		<workAmount>1000</workAmount>
		<surgerySuccessChanceFactor>2000</surgerySuccessChanceFactor>	
		<workerClass>Recipe_InstallArtificialBodyPart</workerClass>
