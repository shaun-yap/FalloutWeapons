<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <!-- ================================= 9mm SMG ==================================== -->
  <ThingDef ParentName="BaseFalloutHumanMakeableGun">
    <defName>FCP_SMG_9mmSGM</defName>
    <label>9mm SMG</label>
    <description>The 9mm submachine gun is a small, yet capable weapon, able to empty a full magazine in under 3 seconds.</description>
    <graphicData>
      <texPath>Things/SMGs/9mmSMG</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
    <soundInteract>9mmSMGInteract</soundInteract>
    <recipeMaker>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>   
    </recipeMaker>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <Mass>1.8</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.775</AccuracyShort>
      <AccuracyMedium>0.475</AccuracyMedium>
      <AccuracyLong>0.325</AccuracyLong>
      <RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
    </statBases>  
	<weaponTags>
	  <li>Wastelander</li>
      <li>SMG</li>
	  <li>9mmSMG</li>
    </weaponTags>
    <costList>
      <Steel>45</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_9mmSMG</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>22.9</range>
        <burstShotCount>8</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>Shot9mmSMG</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_9mmSMG</defName>
    <label>9mm bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>7</damageAmountBase>
      <speed>55</speed>
    </projectile>
  </ThingDef>
  
