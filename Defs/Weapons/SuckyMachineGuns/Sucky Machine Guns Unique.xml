<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ================================= Vance SMG ==================================== -->
  <ThingDef ParentName="BaseGun">
    <defName>FCP_SMG_Vance9mmSMG</defName>
    <label>Vance's 9mm SMG</label>
    <description>Vance and his wife Vikki were "master criminals" before the Great War. The player can hear the story of Vikki and Vance by consulting Primm Slim in the Vikki and Vance Casino. Slim's account implies that Vikki and Vance were in fact small-time white-collar criminals. According to Slim, Vance purchased this high-quality mint condition 9mm machine gun immediately prior to his death but never fired it.</description>
    <graphicData>
      <texPath>Things/SMGs/Vance9mmSMG</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
    <soundInteract>9mmSMGInteract</soundInteract>
    <statBases>
      <Mass>1.8</Mass>  
	  <MarketValue>200</MarketValue>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.775</AccuracyShort>
      <AccuracyMedium>0.475</AccuracyMedium>
      <AccuracyLong>0.325</AccuracyLong>
      <RangedWeapon_Cooldown>2.1</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Vance9mmSMG</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>22.9</range>
        <burstShotCount>13</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>Shot9mmSMG</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Vance9mmSMG</defName>
    <label>9mm bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>8</damageAmountBase>
      <speed>55</speed>
    </projectile>
  </ThingDef>
  

</Defs>