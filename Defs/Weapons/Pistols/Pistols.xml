			<!-- 9mm Pistol-->

  <ThingDef ParentName="BaseFalloutHumanMakeableGun">
    <defName>FCP_Pistol_9mm</defName>
    <label>9mm Pistol</label>
    <description>The 9mm Pistol is the standard issue sidearm of the New California Republic Army and a common sight in the Mojave Wasteland.</description>
    <graphicData>
      <texPath>Things/Pistols/9mmPistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
    <soundInteract>9mmInteract</soundInteract>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <Mass>0.7</Mass>
      <AccuracyTouch>0.815</AccuracyTouch>
      <AccuracyShort>0.765</AccuracyShort>
      <AccuracyMedium>0.465</AccuracyMedium>
      <AccuracyLong>0.385</AccuracyLong>
      <RangedWeapon_Cooldown>0.87</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>   
	  <li>Wastelander</li>
      <li>SimpleGun</li>
      <li>Pistol</li>
	  <li>9mmPistol</li>
    </weaponTags>
    <costList>
      <Steel>30</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>   
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_9mmPistol</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>25.9</range>
        <soundCast>Shot9mm</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
