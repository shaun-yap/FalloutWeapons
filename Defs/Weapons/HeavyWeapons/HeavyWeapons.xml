<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseFalloutHumanMakeableGun">
    <defName>FCP_HeavyWeapon_Minigun</defName>
    <label>minigun</label>
    <description>The Rockwell CZ53 personal minigun, otherwise known as the 5mm Man-Portable Minigun, is capable of firing 5mm ammunition at over 60,000 RPM with an ammo capacity of 120x 5mm round.</description>
    <graphicData>
      <texPath>Things/HeavyWeapons/Minigun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<equippedAngleOffset>45</equippedAngleOffset>
    <soundInteract>InteractMinigun</soundInteract>
    <statBases>
      <WorkToMake>50000</WorkToMake>
      <Mass>11.3</Mass>
      <AccuracyTouch>0.152</AccuracyTouch>
      <AccuracyShort>0.252</AccuracyShort>
      <AccuracyMedium>0.252</AccuracyMedium>
      <AccuracyLong>0.182</AccuracyLong>
      <RangedWeapon_Cooldown>2.06</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>160</Steel>
      <ComponentIndustrial>20</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>MultibarrelWeapons</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <techLevel>Industrial</techLevel>
 	<weaponTags>
      <li>GunHeavy</li>
	  <li>HeavyWeapon</li>
      <li>Minigun</li>
	  <li>BOS</li>	  
	  <li>SuperMutantMaster</li>
	  <li>GunRunners</li>	
	  <li>FCPMinigun</li>
    </weaponTags>
    <equippedStatOffsets>
      <MoveSpeed>-0.25</MoveSpeed>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_HeavyWeaponMinigun</defaultProjectile>
        <warmupTime>2</warmupTime>
        <range>30.9</range>
        <burstShotCount>30</burstShotCount>
        <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
        <soundCast>Shot_Minigun</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrels</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11.7</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_HeavyWeaponMinigun</defName>
    <label>5mm bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>6</damageAmountBase>
	  <armorPenetrationBase>0.20</armorPenetrationBase>
      <speed>70</speed>
    </projectile>
  </ThingDef>
    
</Defs>
