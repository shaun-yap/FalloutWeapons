  		<!-- Fat Man -->
  <ThingDef ParentName="BaseGun">
    <defName>FCP_Explosives_FatMan</defName>
    <label>Fat Man</label>
    <description>The Fat Man is a shoulder-mounted tactical nuclear catapult. It is one of the most devistating carried weapons.</description>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Explosives/FatMan</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>	
	<equippedAngleOffset>45</equippedAngleOffset>
    <statBases>  
      <MarketValue>1250</MarketValue>	
	  <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.90</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <Mass>13.6</Mass>
      <RangedWeapon_Cooldown>9</RangedWeapon_Cooldown>
    </statBases>

    <weaponTags>
      <li>Projectile</li> 
	  <li>Explosive</li>
	  <li>FatMan</li>
	  <li>GunRunners</li>
    </weaponTags>
    <tradeTags>
      <li>Explosive</li>
    </tradeTags>  
	<soundInteract>FatManInteract</soundInteract>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>FCP_Projectile_FatMan</defaultProjectile>
		<forcedMissRadius>0.1</forcedMissRadius>
        <warmupTime>4.5</warmupTime>
        <ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
        <range>30.9</range>
        <soundCast>ShotFatMan</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <stopBurstWithoutLos>false</stopBurstWithoutLos>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <muzzleFlashScale>0</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11.7</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>17</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
      </li>
    </comps>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
