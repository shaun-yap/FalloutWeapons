<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseFalloutHumanMakeableGun" Class="FalloutCollaborationProject.LaserGunDef">
    <defName>FCP_HeavyEnergy_GatlingLaser</defName>
    <label>Gatling Laser</label>
    <description>The Gatling laser is incredibly effective against un-armored foes such as Cazadores, night stalkers and feral ghouls. When used with max charge ammunition, even deathclaws can easily be killed with this weapon.</description>
    <graphicData>
      <texPath>Things/EnergyHeavyWeapons/GatlingLaser</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<equippedAngleOffset>45</equippedAngleOffset>
    <soundInteract>InteractMinigun</soundInteract>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <Mass>8.2</Mass>
      <AccuracyTouch>0.195</AccuracyTouch>
      <AccuracyShort>0.295</AccuracyShort>
      <AccuracyMedium>0.295</AccuracyMedium>
      <AccuracyLong>0.225</AccuracyLong>
      <RangedWeapon_Cooldown>2.01</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>160</Steel>
      <ComponentSpacer>4</ComponentSpacer>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>11</Crafting>     
      </skillRequirements>
      <researchPrerequisite>FCPDEWWeapons</researchPrerequisite>
    </recipeMaker>
    <techLevel>Industrial</techLevel>
 	<weaponTags>
      <li>GunHeavy</li>
	  <li>HeavyWeapon</li>
      <li>Minigun</li>
	  <li>BOS</li>	  
	  <li>SuperMutantMaster</li>
	  <li>GunRunners</li>
    </weaponTags>
    <equippedStatOffsets>
      <MoveSpeed>-0.25</MoveSpeed>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>FCP_Bullet_HeavyEnergyLaserGatling</defaultProjectile>
        <warmupTime>2</warmupTime>
        <range>30.9</range>
        <burstShotCount>44</burstShotCount>
        <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
        <soundCast>ShotLaserRCW</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrels</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11.7</power>
        <cooldownTime>2.01</cooldownTime>
      </li>
    </tools>
	<barrelLength>1.1</barrelLength>
		<modExtensions>
			<li Class="FCPEnergyFilth.DeathEffectModExtension">
				<effectChance>0.30</effectChance>
			</li>
		</modExtensions>
		</ThingDef>

  <ThingDef ParentName="FCP_Bullet_Laser" Class="FalloutCollaborationProject.LaserBeamDef">
    <defName>FCP_Bullet_HeavyEnergyLaserGatling</defName>
    <label>laser burn</label>
	
	
	 <!--Actual Laser Texture-->
	<textures>
      <li>Effects/LaserSkinny</li>
    </textures>  

	<graphicData>
      <drawSize>1</drawSize>
    </graphicData>
	
    <projectile>
      <damageDef>laserburn</damageDef>
      <damageAmountBase>5</damageAmountBase>
    </projectile>
	
	<seam>0.5</seam>


    <!--Flamer-->
  </ThingDef>
 
 <ThingDef ParentName="BaseFalloutHumanMakeableGun">
    <defName>FCP_HeavyEnergy_Flamer</defName>
    <label>Flamer</label>
    <description>The Flamer is great at killing unarmored and lightly armored enemies. It is capable of setting enemies on fire as they scream in pain.</description>
    <graphicData>
      <texPath>Things/EnergyHeavyWeapons/Flamer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>	
	<equippedAngleOffset>45</equippedAngleOffset>
    <soundInteract>FlamerInteract</soundInteract>
    <statBases>
      <WorkToMake>14000</WorkToMake>
      <Mass>6.8</Mass>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.40</AccuracyLong>
      <RangedWeapon_Cooldown>2.06</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>Flamer</li>   
	  <li>GunHeavy</li>
    </weaponTags>
    <costList>
      <Steel>120</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
      <researchPrerequisite>FCPDEWWeapons</researchPrerequisite>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>FCP_Bullet_FlamerFuel</defaultProjectile>
        <warmupTime>0.4</warmupTime>
        <range>12.9</range>    
		<burstShotCount>6</burstShotCount>
        <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
        <soundCast>Shot_IncendiaryLauncher</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>25</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrels</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11.7</power>
        <cooldownTime>2.01</cooldownTime>
      </li>
    </tools>
	<modExtensions>
			<li Class="FCPEnergyFilth.DeathEffectModExtension">
				<effectChance>0.30</effectChance>
			</li>
		</modExtensions>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>FCP_Bullet_FlamerFuel</defName>
    <label>flamer burn</label>
    <graphicData>
	<texPath>Effects/Fire</texPath>
      <graphicClass>Graphic_Flicker</graphicClass>
      <shaderType>TransparentPostLight</shaderType>     
	  <drawSize>2</drawSize>
    </graphicData> 
    <projectile>
      <damageDef>FCPBurn</damageDef>
      <damageAmountBase>9</damageAmountBase>
      <speed>30</speed>
    </projectile>  
	<!--causefireChance>1</causefireChance-->
  </ThingDef>

