<ThoughtDef>
    <defName>FCP_Raul_The_Ghoul_KnowPrisonerSold</defName>
    <durationDays>4</durationDays>
    <stackLimit>5</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>prisoner sold</label>
