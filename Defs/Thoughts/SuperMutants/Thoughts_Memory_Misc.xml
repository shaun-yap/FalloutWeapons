<?xml version="1.0" encoding="utf-8" ?>
<Defs>



  <ThoughtDef>
    <defName>SuperMutantKnowPrisonerSold</defName>
    <durationDays>4</durationDays>
    <stackLimit>5</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>prisoner sold</label>
        <description>This colony sold a prisoner into slavery. We did what we had to do.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>ReleasedHealthyPrisoner</defName>
    <durationDays>6</durationDays>
    <stackLimit>5</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>prisoner released</label>
        <description>We released a healthy prisoner. It feels good to know we even treat prisoners well.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SuperMutantNuzzled</defName>
    <durationDays>1</durationDays>
    <stackLimit>3</stackLimit>
    <stackedEffectMultiplier>0.5</stackedEffectMultiplier>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>nuzzled</label>
        <description>A tasty animal nuzzled me. Maybe animals aren't so bad.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>KnowBuriedInSarcophagus</defName>
    <durationDays>1</durationDays>
    <stackLimit>10</stackLimit>
    <stages>
      <li>
        <label>buried in sarcophagus</label>
        <description>This colony buried someone in a sarcophagus. We should give honor to our brothers by taking their flesh.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- ============== Human corpse butchering ===============-->

  <ThoughtDef>
    <defName>SuperMutantButcheredHumanlikeCorpse</defName>
    <durationDays>6</durationDays>
    <stackLimit>5</stackLimit>
    <stackedEffectMultiplier>0.25</stackedEffectMultiplier>
    <nullifyingTraits>

    </nullifyingTraits>
    <stages>
      <li>
        <label>I butchered humanlike</label>
        <description>I butchered someone up like a tasty animal.</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SuperMutantKnowButcheredHumanlikeCorpse</defName>
    <durationDays>6</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>

    </nullifyingTraits>
    <stages>
      <li>
        <label>we butchered humanlike</label>
        <description>We butchered someone. We should hang it up for two days.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>


  <!-- ============== Combat ============== -->

  <ThoughtDef>
    <defName>SuperMutantObservedLayingCorpse</defName>
    <icon>Things/Mote/ThoughtSymbol/Skull</icon>
    <showBubble>true</showBubble>
    <thoughtClass>Thought_MemoryObservation</thoughtClass>
    <durationDays>0.5</durationDays>
    <stackedEffectMultiplier>0.5</stackedEffectMultiplier>
    <stackLimit>2</stackLimit>
    <nullifyingTraits>
    </nullifyingTraits>
    <stages>
      <li>
        <label>observed corpse</label>
        <description>I saw a dead body laying on the ground. We should eat it while fresh.</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SuperMutantObservedLayingRottingCorpse</defName>
    <icon>Things/Mote/ThoughtSymbol/Skull</icon>
    <showBubble>true</showBubble>
    <thoughtClass>Thought_MemoryObservation</thoughtClass>
    <durationDays>0.5</durationDays>
    <stackedEffectMultiplier>0.5</stackedEffectMultiplier>
    <stackLimit>5</stackLimit>
    <nullifyingTraits>
      <li>Bloodlust</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>observed rotting corpse</label>
        <description>I saw a rotting corpse laying on the ground. I will wait for fresh meat, it tastes better.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SuperMutantWitnessedDeathAlly</defName>
    <icon>Things/Mote/ThoughtSymbol/Skull</icon>
    <showBubble>true</showBubble>
    <durationDays>2</durationDays>
    <stackLimit>5</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>witnessed ally's death</label>
        <description>I saw one of my people die. We should give honor to our brother by taking thier flesh.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SuperMutantWitnessedDeathNonAlly</defName>
    <icon>Things/Mote/ThoughtSymbol/Skull</icon>
    <showBubble>true</showBubble>
    <durationDays>1</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>witnessed outsider's death</label>
        <description>I saw someone die. They were alive one moment, and dead the next.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>


  <!-- Banishing pawns -->


  <!-- Rescue quest -->

</Defs>
