				<MaxHitPoints>100</MaxHitPoints>
				<Nutrition>0.05</Nutrition>
			</statBases>
			<graphicData>
				<texPath>Things/Crops/Plants/RazorgrainPlant</texPath>
				<graphicClass>Graphic_Single</graphicClass>
			</graphicData>
				<selectable>true</selectable>
			<pathCost>10</pathCost>
			<ingestible/>
