<?xml version="1.0" encoding="utf-8" ?>

<Defs>

	<ThingDef ParentName="PlantBase">
		<defName>PlantXanderRoot</defName>
		<label>Xander Root</label>
		<description>A large turnip-like root with mild healing properties. When combined with a Broc Flower it can create herbal medicine or stimpaks.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.30</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Crops/Plants/XanderRootPlant</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<plant>
			<fertilitySensitivity>0.6</fertilitySensitivity>
			<growDays>4.5</growDays>
			<immatureGraphicPath>Things/Crops/Immature/XanderRootPlant</immatureGraphicPath>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>XanderRoot</harvestedThingDef>
			<harvestYield>2</harvestYield>
			<sowMinSkill>5</sowMinSkill>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
			<visualSizeRange>0.3~1.05</visualSizeRange>
			<purpose>Health</purpose>
		</plant>
	</ThingDef>

	<ThingDef ParentName="PlantBase">
		<defName>PlantBrocFlower</defName>
		<label>Broc Flower</label>
		<description>A small orange flower with slight medicinal properties. When combined with a Xander Root it can create herbal medicine or stimpaks.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.05</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Crops/Plants/BrocFlowerPlant</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.5</drawSize>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<plant>
			<fertilitySensitivity>0.75</fertilitySensitivity>
			<growDays>4</growDays>
			<immatureGraphicPath>Things/Crops/Immature/BrocFlowerPlant</immatureGraphicPath>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>BrocFlower</harvestedThingDef>
			<harvestYield>2</harvestYield>
			<sowMinSkill>6</sowMinSkill>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
			<visualSizeRange>0.3~1.05</visualSizeRange>
			<purpose>Health</purpose>
		</plant>
	</ThingDef>
	
	  <ThingDef ParentName="PlantBase">
    <defName>PlantCoyoteTobacco</defName>
    <label>Coyote Tobacco plant</label>
    <description>Coyote tobacco is a reinvigorating plant that can be turned into cigarretes or cigars.Before the Great War, it was commonly used for medicinal purposes, especially among Native Americans. In more recent times, it became a favorite of wastelanders.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.15</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Crops/Plants/TobaccoPlant</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible />
    <plant>
      <growDays>7.50</growDays>
	  <immatureGraphicPath>Things/Crops/Immature/TobaccoPlant</immatureGraphicPath>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>TobaccoLeaves</harvestedThingDef>
      <harvestYield>9</harvestYield>
      <sowMinSkill>4</sowMinSkill>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.3~1.0</visualSizeRange>
      <wildOrder>2</wildOrder>
    </plant>
  </ThingDef>

</Defs>
