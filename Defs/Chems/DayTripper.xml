<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>FCP_DayTripper</defName>
    <label>day tripper</label>
    <description>A mild pre-War hallucinogenic drug, Day Tripper (stylized as Daytripper) was favored by Americans looking for a happy escape from reality.</description>
    <descriptionHyperlinks>
      <HediffDef>DayTripperHigh</HediffDef>
      <HediffDef>DayTripperTolerance</HediffDef>
      <HediffDef>DayTripperAddiction</HediffDef>
      <HediffDef>ChemicalDamageModerate</HediffDef>
    </descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/Drug/cheems</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>300</WorkToMake>
      <MarketValue>40</MarketValue>
      <Mass>0.005</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <joyKind>Chemical</joyKind>
      <joy>0.70</joy>
      <drugCategory>Social</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>DayTripperHigh</hediffDef>
          <severity>0.75</severity>
          <toleranceChemical>DayTripper</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>DayTripperTolerance</hediffDef>
          <severity>0.030</severity>
          <divideByBodySize>true</divideByBodySize>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <researchPrerequisite>FCP_ChemsHard</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Neutroamine>2</Neutroamine>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>DayTripper</chemical>
        <addictiveness>0.35</addictiveness>
        <minToleranceToAddict>0.08</minToleranceToAddict>
        <existingAddictionSeverityOffset>0.20</existingAddictionSeverityOffset>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>210</listOrder>
      </li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>DayTripperHigh</defName>
    <label>high on Day Tripper</label>
    <labelNoun>a Day Tripper high</labelNoun>
    <description>DayTripper in the bloodstream. Users are more laid back and relaxed, though the tranquilizing effect makes physical tasks more difficult to accomplish.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.5</severityPerDay>
      </li>
    </comps>
      <stages>
        <li>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <offset>-0.2</offset>
            </li>
            <li>
              <capacity>Moving</capacity>
              <offset>-0.3</offset>
            </li>
          </capMods>
        </li>
      </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>DayTripperHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>DayTripperHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>high on Day Tripper</label>
        <description>Man, world is beautiful .</description>
        <baseMoodEffect>35</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <!-- DayTripper addiction -->
  
  <ChemicalDef>
    <defName>DayTripper</defName>
    <label>day tripper</label>
    <addictionHediff>DayTripperAddiction</addictionHediff>
    <toleranceHediff>DayTripperTolerance</toleranceHediff>
    <onGeneratedAddictedToleranceChance>0.8</onGeneratedAddictedToleranceChance>
  </ChemicalDef>
  
  <NeedDef ParentName="DrugAddictionNeedBase">
    <defName>Chemical_DayTripper</defName>
    <needClass>Need_Chemical</needClass>
    <label>day tripper</label>
    <description>Because of an Day Tripper addiction, this person needs to regularly consume the drug to avoid withdrawal symptoms.</description>
    <listPriority>40</listPriority>
  </NeedDef>

  <HediffDef ParentName="DrugToleranceBase">
    <defName>DayTripperTolerance</defName>
    <label>Day Tripper tolerance</label>
    <description>A built-up tolerance to Day Tripper. The more severe this tolerance is, the more Day Tripper it takes to get the same effect.</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.015</severityPerDay>
      </li>
      <li Class="HediffCompProperties_DrugEffectFactor">
        <chemical>DayTripper</chemical>
      </li>
    </comps>
    <hediffGivers>
      <li Class="HediffGiver_RandomDrugEffect">
        <hediff>ChemicalDamageModerate</hediff>
        <minSeverity>0.50</minSeverity>
        <baseMtbDays>120</baseMtbDays>
        <partsToAffect>
          <li>Brain</li>
        </partsToAffect>
      </li>
    </hediffGivers>
  </HediffDef>
  
  <HediffDef ParentName="AddictionBase">
    <defName>DayTripperAddiction</defName>
    <label>day tripper addiction</label>
    <description>A chemical addiction to Day Tripper. Long-term presence of Day Tripper has caused neurological adaptations at the cellular level, so the brain can no longer function properly without the drug.
\nWithout regular doses of Day Tripper, withdrawal symptoms will begin. However, extended abstinence will force the brain to adapt back to its normal state, resolving the addiction.</description>
    <hediffClass>Hediff_Addiction</hediffClass>
    <causesNeed>Chemical_DayTripper</causesNeed>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.0333</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <label>withdrawal</label>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.40</offset>
          </li>
        </capMods>
        <mentalStateGivers>
          <li>
            <mentalState>Binging_DrugExtreme</mentalState>
            <mtbDays>60</mtbDays>
          </li>
          <li>
            <mentalState>Wander_Psychotic</mentalState>
            <mtbDays>20</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>DayTripperWithdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>DayTripperAddiction</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>Day Tripper withdrawal</label>
        <description>I cannot cope with life anymore.</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</Defs>
