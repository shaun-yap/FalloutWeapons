<?xml version="1.0" encoding="utf-8" ?>
<Defs>

   <ThingDef ParentName="BuildingBase">
    <defName>FCP_HamRadio</defName>
    <label>Ham Radio</label>
    <description>A Ham Radio. Allows radio contact with other factions.</description>
    <thingClass>Building_CommsConsole</thingClass>
    <graphicData>
      <texPath>Things/Building/HamRadio</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <rect>(0,0,0.7,0.7)</rect>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
      <shadowData>
        <volume>(1,0.5,1)</volume>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <blockWind>true</blockWind>
    <castEdgeShadows>false</castEdgeShadows>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>2200</WorkToBuild>
      <Flammability>0.6</Flammability>
      <Mass>20</Mass>
    </statBases>
    <size>(1,1)</size>
    <costList>
      <Steel>80</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <defaultPlacingRot>North</defaultPlacingRot>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>Misc</designationCategory>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>100</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <researchPrerequisites>
      <li>MicroelectronicsBasics</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>

    <minifiedDef>MinifiedThing</minifiedDef>
<!-- If it's minifiable, it has to have a thingCategory for some reason (I think it determines where it's found in the storage zone data) -->
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>


  </ThingDef>
  
</Defs>