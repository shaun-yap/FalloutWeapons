<?xml version="1.0" encoding="utf-8" ?>
<Defs>


<!-- Brute Leg Armor-->
  <ThingDef ParentName="ArmorMachineableBase">
    <defName>FCP_SMB_Leg_Armor</defName>
    <label>brute leg armor</label>
    <description>A belt with metal plates attached to on the sides</description>
    <recipeMaker>
      <researchPrerequisite>FCPMutantArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/SuperMutant/BruteLegArmor_Hulk_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>14000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>15.5</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
      <ArmorRating_Heat>0.3</ArmorRating_Heat>
      <Insulation_Cold>3.5</Insulation_Cold>
      <Insulation_Heat>1</Insulation_Heat>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.3</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
	
    <costList>
      <Cloth>60</Cloth>
      <Steel>120</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
	
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>FCPLegs</li>
      </layers>  
	  <wornGraphicPath>Apparel/SuperMutant/BruteLegArmor</wornGraphicPath>
      <tags>
        <li>BruteLowArmor</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
  
