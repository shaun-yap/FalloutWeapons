<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="MutantArmorMachineableBase" ParentName="ApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>
  

<!-- Mutant Vest Armor-->

  <ThingDef ParentName="MutantArmorMachineableBase">
    <defName>FCP_SM_Basic_Armor</defName>
    <label>super mutant vest</label>
    <description>A metal vest inserted on the chest and strapped on the back.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>FCPMutantArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/SuperMutant/MutantVest_Hulk_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>3.6</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>0.60</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Heat>0.25</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.12</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>

    <costList>
        <Cloth>60</Cloth>
		<Steel>120</Steel>
    </costList>
	
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/SuperMutant/MutantVest</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>SuperMutantLowArmor</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
    

