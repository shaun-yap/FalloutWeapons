<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <!-- Master Helmet -->

  <ThingDef ParentName="ArmorMachineableBase">
    <defName>FCP_SM_Master_Helmet</defName>
    <label>mutant master helmet</label>
    <description>An aviators cap made from composite to protect an aircrewman from any accidental prop strikes.</description>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Apparel/SuperMutant/MutantMasterHat_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
	
    <costList>
      <Cloth>60</Cloth>
      <Steel>120</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
	
    <statBases>
      <WorkToMake>14000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>2</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.175</ArmorRating_Blunt>
      <ArmorRating_Heat>0.5</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/SuperMutant/MutantMasterHat</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
