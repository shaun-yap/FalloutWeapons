<Defs>

	<ThingDef ParentName="ArmorMachineableBase">
		<defName>FCP_Apparel_HeavyLeatherArmor</defName>
		<label>Heavy Leather Armor</label>
		<description>A vest with armor plates inserted on the chest and back. While quite effective at deflecting gunshots and stabbing attacks against the chest, it does nothing to protect the limbs.</description>
		<techLevel>Industrial</techLevel>
		<graphicData>
			<texPath>Things/Apparel/Wastelandarmor/HeavyLeatherArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.90</drawSize>
		</graphicData>
		<statBases>
			<WorkToMake>9000</WorkToMake>
			<MaxHitPoints>300</MaxHitPoints>
			<Mass>12</Mass>
			<Flammability>0.6</Flammability>
			<ArmorRating_Sharp>0.74</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.27</ArmorRating_Blunt>
			<ArmorRating_Heat>1.04</ArmorRating_Heat>  
				<StuffEffectMultiplierArmor>0.15</StuffEffectMultiplierArmor>
				<StuffEffectMultiplierInsulation_Cold>0.65</StuffEffectMultiplierInsulation_Cold>
				<StuffEffectMultiplierInsulation_Heat>0.35</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>10</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.20</MoveSpeed>
		</equippedStatOffsets>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<recipeMaker>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
		</recipeMaker>
		<costStuffCount>120</costStuffCount>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<costList>
			<Steel>30</Steel>
		</costList>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Wastelandarmor/HeavyLeatherArmor</wornGraphicPath>
			<useWornGraphicMask>True</useWornGraphicMask>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
				<li>IndustrialMilitaryBasic</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<only>(0.33,0.33,0.33)</only>
				</li>
				<li>
					<only>(0.65,0.65,0.65)</only>
				</li>
				<li>
					<weight>0.5</weight>
					<min>(0.3,0.3,0.3)</min>
					<max>(0.5,0.5,0.5)</max>
				</li>
			</options>
		</colorGenerator>
		<modExtensions>
			<li Class="FalloutCore.AdditionalArmorProtection">
				<additionalArmors>
					<li>
						<bodyPart>Legs</bodyPart>
						<ArmorStats>
							<ArmorRating_Sharp>0.84</ArmorRating_Sharp>
							<ArmorRating_Blunt>0.36</ArmorRating_Blunt>
							<ArmorRating_Heat>1.26</ArmorRating_Heat>
						</ArmorStats>
					</li>
					<li>
						<bodyPart>Feet</bodyPart>
						<ArmorStats>
							<ArmorRating_Sharp>0.84</ArmorRating_Sharp>
							<ArmorRating_Blunt>0.36</ArmorRating_Blunt>
							<ArmorRating_Heat>1.26</ArmorRating_Heat>
						</ArmorStats>
					</li>
					<li>
						<bodyPart>Arms</bodyPart>
						<ArmorStats>
							<ArmorRating_Sharp>0.84</ArmorRating_Sharp>
							<ArmorRating_Blunt>0.36</ArmorRating_Blunt>
							<ArmorRating_Heat>1.26</ArmorRating_Heat>
						</ArmorStats>
					</li>
					<li>
						<bodyPart>Hands</bodyPart>
						<ArmorStats>
							<ArmorRating_Sharp>0.84</ArmorRating_Sharp>
							<ArmorRating_Blunt>0.36</ArmorRating_Blunt>
							<ArmorRating_Heat>1.26</ArmorRating_Heat>
						</ArmorStats>
					</li>
				</additionalArmors>
			</li>
		</modExtensions>
	</ThingDef>

