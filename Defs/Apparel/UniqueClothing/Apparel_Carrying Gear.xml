<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="ApparelBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <Beauty>0</Beauty>
      <SellPriceFactor>0.70</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>
  <ThingDef ParentName="ApparelBase">
    <defName>FCPApparel_NukaColaBackpack</defName>
    <label>NukaCola Backpack</label>
    <techLevel>Industrial</techLevel>
    <description>A small backpack to make carry things more convinient.</description>
    <graphicData>
      <texPath>Things/Apparel/Wastelandpacks/NukaColaBackpack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <Insulation_Cold>1</Insulation_Cold>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>6000</WorkToMake>
      <Mass>2</Mass>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.15</MoveSpeed>
      <CarryingCapacity>20</CarryingCapacity>
    </equippedStatOffsets>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costList>
      <Cloth>20</Cloth>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <generateCommonality>2</generateCommonality>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <tags>
        <li>Outlander</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
      <wornGraphicPath>Things/Apparel/Wastelandpacks/NukaColaBackpack</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
    </apparel>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
	
  </ThingDef>
  <ThingDef ParentName="ApparelBase">
    <defName>FCPApparel_KeepOutBox</defName>
    <label>Keep Out Box</label>
    <techLevel>Industrial</techLevel>
    <description>A large backpack to make carry even more things more convinient.</description>
    <graphicData>
      <texPath>Things/Apparel/Wastelandpacks/KeepOutBox</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>8000</WorkToMake>
      <Mass>6</Mass>
      <Insulation_Cold>3</Insulation_Cold>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.35</MoveSpeed>
      <CarryingCapacity>40</CarryingCapacity>
    </equippedStatOffsets>
    <costStuffCount>100</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costList>
      <Cloth>20</Cloth>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <generateCommonality>2</generateCommonality>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <tags>
        <li>Outlander</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
      <wornGraphicPath>Things/Apparel/Wastelandpacks/KeepOutBox</wornGraphicPath>
	  <useWornGraphicMask>True</useWornGraphicMask>
      <layers>
        <li>Shell</li>
      </layers>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
    </apparel>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>6</weight>
          <only>RGBA(0.2,0.2,0.2,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
</Defs>